{
  "name": "@nemnesia/simple-password-crypto",
  "version": "0.1.0",
  "description": "Secure password-based encryption/decryption using Argon2id + AES-256-GCM",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pnpm run clean && tsup",
    "clean": "rm -rf dist",
    "lint": "eslint \"{src,test,e2e}/**/*.ts\" --fix",
    "format": "prettier --write \"{src,test,e2e}/**/*.ts\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:coverage:ui": "vitest --ui --coverage",
    "prepublishOnly": "pnpm run lint && pnpm run format && pnpm run build && pnpm test",
    "publish:dryrun": "pnpm publish --dry-run",
    "publish:release": "pnpm run build && pnpm publish"
  },
  "keywords": [
    "encryption",
    "decryption",
    "password",
    "argon2",
    "aes-gcm",
    "wallet",
    "security",
    "crypto"
  ],
  "author": "ccHarvestasya",
  "repository": {
    "type": "git",
    "url": "https://github.com/harvestasya/symbol-tools.git",
    "directory": "packages/simple-password-crypto"
  },
  "bugs": {
    "url": "https://github.com/harvestasya/symbol-tools/issues"
  },
  "homepage": "https://github.com/harvestasya/symbol-tools/tree/main/packages/simple-password-crypto#readme",
  "license": "MIT",
  "packageManager": "pnpm@10.26.2",
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "dependencies": {
    "@noble/ciphers": "^1.1.0",
    "@noble/hashes": "^1.6.1"
  },
  "volta": {
    "node": "20.19.6"
  }
}
