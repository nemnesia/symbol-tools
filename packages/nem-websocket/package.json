{
  "name": "@nemnesia/nem-websocket",
  "version": "0.1.0",
  "description": "NEM ブロックチェーンのリアルタイムデータを監視する TypeScript ライブラリ",
  "keywords": [
    "nem",
    "blockchain",
    "websocket"
  ],
  "author": "ccHarvestasya",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nemnesia/symbol-tools.git",
    "directory": "packages/nem-websocket"
  },
  "bugs": {
    "url": "https://github.com/nemnesia/symbol-tools/issues"
  },
  "homepage": "https://github.com/nemnesia/symbol-tools/tree/main/packages/nem-websocket#readme",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE",
    "CHANGELOG.md"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "build": "tsup",
    "lint": "eslint \"{src,test,e2e}/**/*.ts\"",
    "format": "prettier --write \"{src,test,e2e}/**/*.ts\"",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui --coverage",
    "prepublishOnly": "npm run lint && npm run format && npm run build && npm test",
    "publish:dryrun": "npm publish --dry-run",
    "publish:release": "npm run build && npm publish"
  },
  "dependencies": {
    "@stomp/stompjs": "^7.2.1",
    "isomorphic-ws": "^5.0.0",
    "ws": "^8.19.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "volta": {
    "node": "20.19.6"
  }
}
